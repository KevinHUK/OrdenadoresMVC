@using MVC_ComponentesCodeFirst.App_Data
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model MVC_ComponentesCodeFirst.Models.Ordenador

@{
	ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Ordenador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Propietario" class="control-label"></label>
                    <input asp-for="Propietario" class="form-control" />
                    <span asp-validation-for="Propietario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PedidoId" class="control-label"></label>
                <input asp-for="PedidoId" class="form-control" />
                <span asp-validation-for="PedidoId" class="text-danger"></span>
            </div>


	        <div class="form-group">
                    <label asp-for="Componentes!.Single(x=>x.Categoria == CategoriasComponentes.Procesador).Id" class="control-label">Elija procesador</label>

                    <select asp-for="Componentes!.Single(x=>x.Categoria == CategoriasComponentes.Procesador).Id" class="form-select" asp-items="ViewBag.Procesadores">
			        <option selected="selected" value=""></option>
		        </select>
                    <span asp-validation-for="Componentes!.Single(x=>x.Categoria == CategoriasComponentes.Procesador).Id" class="text-danger"></span>
	        </div>
	        <div class="form-group">
                    <label asp-for="Componentes!.Single(x=>x.Categoria == CategoriasComponentes.Memorizador).Id" class="control-label">Elija memoria RAM</label>

                    <select asp-for="Componentes!.Single(x=>x.Categoria == CategoriasComponentes.Memorizador).Id" class="form-select" asp-items="ViewBag.Memorizadores">
			        <option selected="selected" value=""></option>
		        </select>
                    <span asp-validation-for="Componentes!.Single(x=>x.Categoria == CategoriasComponentes.Memorizador).Id" class="text-danger"></span>
	        </div>
	        <div class="form-group">
                    <label asp-for="Componentes!.Single(x=>x.Categoria == CategoriasComponentes.Almacenador).Id" class="control-label">Elija disco duro</label>

                    <select asp-for="Componentes!.Single(x=>x.Categoria == CategoriasComponentes.Almacenador).Id" class="form-select" asp-items="ViewBag.Almacenadores">
			        <option selected="selected" value=""></option>
		        </select>
                    <span asp-validation-for="Componentes!.Single(x=>x.Categoria == CategoriasComponentes.Almacenador).Id" class="text-danger"></span>
	        </div>
         
            
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
